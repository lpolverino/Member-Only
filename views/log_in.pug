extends layout 

block content 
    h1 Log In

    form(method='POST')
      div
        label(for='username') Username:
        input#username.form-control(type='text', placeholder='abc@example.com' name='username' required )

        label(for='password') Password:
        input#password.form-control(type='text', placeholder='password' name='password' required )
 
      button.btn.btn-primary(type='submit') Log In

    if errors
      ul
        for error in errors
          li!= error.msg